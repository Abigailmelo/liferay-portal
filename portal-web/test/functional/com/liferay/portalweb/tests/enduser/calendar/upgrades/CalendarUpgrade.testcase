@component-name = "portal-upgrades"
definition {
	property database.types = "db2,mariadb,mysql,oracle,postgresql,sqlserver,sybase";
	property ignore.errors = "Plugin security management is not enabled. Enable a security manager, then restart.";
	property portal.release = "true";
	property portal.upstream = "true";
	property testray.component.names = "Calendar";
	property testray.main.component.name = "Upgrades Forms and Workflow";

	setUp {
		SignIn.signIn();

		Smoke.viewWelcomePage();

		ProductMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "Search"
		);

		SearchAdministration.executeSearchActions(
			actionsDescription = "Reindex all search indexes."
		);
	}

	@description = "This is a use case for LPS-43215."
	@priority = "5"
	test UpgradeCalendarWithLongCharactersFrom6130 {
		property data.archive.type = "data-archive-calendar-long-character-event";
		property database.types = "oracle";
		property portal.version = "6.1.30";

		AssertConsoleTextNotPresent(value1 = "SQLException");
		AssertConsoleTextNotPresent(value1 = "ORA-22835");
		AssertConsoleTextNotPresent(value1 = "Buffer too small for CLOB to CHAR or BLOB to RAW conversion");
	}

	@priority = "5"
	test ViewCalendarArchive612 {
		property data.archive.type = "data-archive-calendar";
		property database.types = "mariadb,mysql,postgresql";
		property osgi.modules.includes = "calevent";
		property portal.version = "6.1.2";

		Upgrade.viewCalendar();
	}

	@priority = "5"
	test ViewCalendarArchive6130 {
		property data.archive.type = "data-archive-calendar";
		property osgi.modules.includes = "calevent";
		property portal.version = "6.1.30";

		Upgrade.viewCalendar();
	}

	@priority = "5"
	test ViewCalendarArchive621015 {
		property data.archive.type = "data-archive-calendar";
		property portal.version = "6.2.10.15";

		Upgrade.viewCalendar();
	}

	@priority = "5"
	test ViewCalendarArchive621021 {
		property data.archive.type = "data-archive-calendar";
		property portal.version = "6.2.10.21";

		Upgrade.viewCalendar();
	}

	@priority = "5"
	test ViewCalendarArchive625 {
		property data.archive.type = "data-archive-calendar";
		property database.types = "mariadb,mysql,postgresql";
		property portal.version = "6.2.5";

		Upgrade.viewCalendar();
	}
}